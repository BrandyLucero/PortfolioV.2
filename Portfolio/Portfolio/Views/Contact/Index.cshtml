model Portfolio.Models.Contact
@{
    Layout = null;
}
<!DOCTYPE html>
<head>
    <title>Contact Page</title>
    <style>
        .contactform {
        background: #808080 url(http://static3.grsites.com/archive/textures/pa/pa019.jpg) content-box repeat;
        {
        background-size:100%;
        font-family: 'Bookman Old Style', Bookman, 'URW Bookman L', 'Palatino Linotype', serif;
        }
        .contact-header {
        border: 1px solid #ffb400;
        background: #808080 url(http://static1.grsites.com/archive/textures/pa/pa065.gif) content-box repeat;
        }
        .contact-header img {
        display: inline-block;
        margin:30px;
        padding-left: 50px
        }
        .content-header nav {
        display: block;
        text-align: right;
        color: #c8c1c1;
        padding-bottom: 10px;
        margin: 5px;
        }
        .contact-header nav a:link {
        color:#c8c1c1
        }
        .contact-header nav a:visited{
        color: #ffb400
        }
        .contact-header nav a:hover {
        color: #3192cb
        }
        .contact-header nav a:active {
        color: #98acf5
        }
        .contact-header h1 {
        font-family: 'Bookman Old Style', Bookman, 'URW Bookman L', 'Palatino Linotype', serif;
        color: #c8c1c1;
        text-align: center;
        padding: 10px;
        margin-top: 5px;
        }
        .footer{
        color: #c8c1c1
        border: 1px solid #ffb400;
        height: 60px;
        background: #808080 url http://static3.grsites.com/archive/textures/pa/pa019.jpg) content-box repeat;
        margin-top: 5px;
        align-content: bottom;
        }
        .footer p {
        font-family: 'Bookman Old Style', Bookman, 'URW Bookman L', 'Palatino Linotype', serif;
        display: inline-block; 
        margin: auto 5px auto 5px;
        padding: 20px 5px 20px 5px;
        }
        .footer nav {
        float: right;
        display: inline-block; 
        margin: auto 5px auto 5px;
        padding: 20px 5px 20px 5px;
        }
        .footer nav a:link {
        color: #c8c1c1;
        }
        .footer nav a:visited{
        color: #ffb400
        }
        .footer nav a:hover {
        color: #3192cb
        }
        .footer nav a:active{
        color: #98acf5
        }
        </style>
</head>
<header>
    <div class="contact-header">
        <h1>Brandy's Page</h1>
        <img src="https://z-1-scontent-b.xx.fbcdn.net/hphotos-xfa1/v/t1.0-9/230419_10150187766777566_2043087_n.jpg?oh=f6fccb7fa9cc79428e50473da603cae7&oe=54BB4645" width="200" height="130" float="left" />
        <nav>
            &nbsp;||&nbsp;
            <a href="@Url.Action("Index", "Home")">Home</a>
            &nbsp;||&nbsp;
           <a href="@Url.Action("Index", "About")">About</a>
               &nbsp;||&nbsp;
           <a href="@Url.Action("Index", "Work")">Work</a>
               &nbsp;||&nbsp;
           <a href="@Url.Action("Index", "Contact")">Contact</a>
            &nbsp;||&nbsp;
        </nav>
    </div>
</header>
<body>
    <div class="contactform">
        <h2>Contact Form</h2>
        <form action="@Url.Action("Index", "Contact")" method="post">
            <div>
                <!--create a label-->
                @Html.LabelFor(x => x.FirstName)
                <!--create text box-->
                @Html.TextAreaFor(x => x.FirstName)
                <!--create a message-->
                @Html.ValidationMessageFor(x=> x.FirstName)                                                                                                                                
            </div>
                    <div>
                <!--create a label-->
                @Html.LabelFor(x => x.LastName)
                <!--create text box-->
                @Html.TextAreaFor(x => x.LastName)
                <!--create a message-->
                @Html.ValidationMessageFor(x=> x.LastName)                                                                                                                                
            </div>
                    <div>
                <!--create a label-->
                @Html.LabelFor(x => x.EmailAddress)
                <!--create text box-->
                @Html.TextAreaFor(x => x.EmailAddress)
                <!--create a message-->
                @Html.ValidationMessageFor(x=> x.EmailAddress)  
                                                                                                                                                      
            </div>
                   <div>
                <!--create a label-->
                @Html.LabelFor(x => x.ContactNumber)
                <!--create text box-->
                @Html.TextAreaFor(x => x.ContactNumber)
                <!--create a message-->
                @Html.ValidationMessageFor(x=> x.ContactNumber)  
                                                                                                                                                      
            </div>
             <div>
                <!--create a label-->
                @Html.LabelFor(x => x.Comment)
                <!--create text box-->
                @Html.TextAreaFor(x => x.Comment)
                <!--create a message-->
                @Html.ValidationMessageFor(x=> x.Comment) 
                 </div>
                 </div>
            <input type="submit" value="Submit"/>
    </form>
    @*add a reference to jQuery Validation this is the javascript that actually performs our validation using
    @section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }
    </body>
    <footer>
    <div class="footer">
    <p>Copyright 2014 Brandy Lucero from Denver Colorado</p>
    <nav>
    &nbsp;||&nbsp;
