       &nbsp;||&nbsp;
    <a href="@Url.Action("Index", "Work")">Home</a>
       &nbsp;||&nbsp;
    <a href="@Url.Action("Index", "Contact")">Home</a>
     &nbsp;||&nbsp;
    </nav>
    </div>
    </footer>
    </html>
     
